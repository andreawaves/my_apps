<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg2"
    tools:context=".MainActivity">

    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="0dp"
        android:layout_height="132dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.3">

        <TextView
            android:id="@+id/x"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="Pokemon"
            android:textAppearance="@style/TextAppearance.AppCompat.Display1"
            android:textColor="#FFC107"
            android:textSize="50sp"
            android:textStyle="bold"
            app:fontFamily="@font/delius" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:layout_gravity="center"
            android:layout_marginBottom="100px"
            android:gravity="center"
            android:text="Trading cards"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            android:textColor="#FFC107"
            android:textSize="25sp"
            android:textStyle="bold"
            app:fontFamily="@font/delius" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout2"
        app:layout_constraintVertical_bias="0.100000024"
        tools:layout_editor_absoluteX="-16dp">

        <EditText
            android:id="@+id/et_usuario"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="70px"
            android:layout_marginRight="70px"
            android:layout_marginBottom="20px"
            android:backgroundTint="@color/colorPrimary"
            android:ems="10"
            android:fontFamily="@font/delius"
            android:hapticFeedbackEnabled="false"
            android:hint="Ingrese usuario"
            android:singleLine="false"
            android:textColor="#FFC107"
            android:textColorHighlight="#FFC107"
            android:textColorHint="#92FFC107"
            android:textColorLink="#FFC107"
            android:textSize="18sp"
            android:typeface="monospace" />

        <EditText
            android:id="@+id/et_password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="70px"
            android:layout_marginRight="70px"
            android:layout_marginBottom="70px"
            android:backgroundTint="@color/colorPrimary"
            android:ems="10"
            android:fontFamily="@font/delius"
            android:hapticFeedbackEnabled="false"
            android:hint="Password"
            android:singleLine="false"
            android:textColor="#FFC107"
            android:textColorHighlight="#FFC107"
            android:textColorHint="#92FFC107"
            android:textColorLink="#FFC107"
            android:inputType="textPassword"
            android:textSize="18sp"
            android:typeface="monospace" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btn_login"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="70px"
                android:layout_weight="1"
                android:fontFamily="@font/delius"
                android:shadowColor="#FFFFFF"
                android:text="Login"
                android:textColor="#26347E"
                android:textColorHighlight="#26347E"
                android:textColorHint="#26347E"
                android:textColorLink="#26347E"
                android:textSize="18sp"
                android:textStyle="bold"
                android:typeface="monospace" />

            <Button
                android:id="@+id/btn_registro"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="70px"
                android:layout_weight="1"
                android:fontFamily="@font/delius"
                android:shadowColor="#FFFFFF"
                android:text="Registro"
                android:textColor="#26347E"
                android:textColorHighlight="#26347E"
                android:textColorHint="#26347E"
                android:textColorLink="#26347E"
                android:textSize="18sp"
                android:textStyle="bold"
                android:typeface="monospace" />
        </LinearLayout>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>